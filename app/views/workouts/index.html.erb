

<h2>Activity Summary</h2>
<br>

<%= bar_chart Workout.group(:workout_type).sum(:time) %>
<br>


<h2>Activitiy Frequency</h2>
<br>
<%= pie_chart Workout.group(:workout_type).count %>
<br>


<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Subject</th>
      <th>Category</th>
      <th>Location</th>
      <th>Time (min)</th>
      <th>Intensity (1-10)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <td><%= workout.day %></td>
        <td><%= workout.workout_name %></td>
        <td><%= workout.workout_type %></td>
        <td><%= workout.location %></td>
        <td><%= workout.time %></td>
        <td><%= workout.intensity %></td>
        <td><%= link_to 'Show', workout, class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_workout_path(workout), class:"btn btn-dark btn-sm" %></td>
        <td><%= link_to 'Delete', workout, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Activity', new_workout_path, class:"btn btn-dark" %>

<br>

